<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjyc.common.model.dao.ICarrierCarCountDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cjyc.common.model.entity.CarrierCarCount">
        <id column="id" property="id" />
        <result column="driver_id" property="driverId" />
        <result column="car_num" property="carNum" />
        <result column="income" property="income" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, driver_id, car_num, income
    </sql>

    <!-- 根据承运商id查询车数和总收入 -->
    <select id="count" resultType="com.cjyc.common.model.entity.CarrierCarCount" parameterType="java.lang.Long">
        SELECT
            sum( count.car_num ) AS carNum,
            IFNULL( SUM( count.income ), 0 ) AS income
        FROM
            d_driver_car_count count
        WHERE
            count.driver_id IN ( SELECT con.driver_id FROM d_carrier_driver_con con LEFT JOIN d_carrier c ON c.id = con.carrier_id
            where c.id = #{carrierId})
    </select>

</mapper>
