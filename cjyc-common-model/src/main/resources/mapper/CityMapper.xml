<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjyc.common.model.dao.ICityDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cjyc.common.model.entity.City">
        <id column="code" property="code" />
        <result column="parent_code" property="parentCode" />
        <result column="name" property="name" />
        <result column="level" property="level" />
        <result column="lng" property="lng" />
        <result column="lat" property="lat" />
        <result column="hot" property="hot" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        code, parent_code as parentCode, name, level, lng, lat, hot, create_time as createTime, update_time as updateTime
    </sql>
    <select id="findChildList" resultType="com.cjyc.common.model.entity.City">
        select
        <include refid="Base_Column_List"/>
        from s_city c1
        join s_city c2 on c1.parent_code = c2.code
        where c2.code = #{code,jdbcType=VARCHAR}
    </select>

    <select id="getList" resultType="hashmap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from s_city where 1=1
        <choose>
            <when test="cityCode != null and cityCode != ''">
                and parent_code = #{cityCode}
            </when>
            <otherwise >
                and level = 1
            </otherwise>
        </choose>
    </select>

    <!--根据城市编码code获取子code -->
    <select id="getCodesList"  resultType="java.lang.String" parameterType="java.lang.String">
        select code from s_city where parent_code = #{parentCode,jdbcType=VARCHAR}
    </select>

</mapper>
