<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjyc.common.model.dao.ICustomerDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cjyc.common.model.entity.Customer">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="name" property="name" />
        <result column="alias" property="alias" />
        <result column="phone" property="phone" />
        <result column="contact_man" property="contactMan" />
        <result column="contact_address" property="contactAddress" />
        <result column="customer_nature" property="customerNature" />
        <result column="company_nature" property="companyNature" />
        <result column="major_bus_des" property="majorBusDes" />
        <result column="initials" property="initials" />
        <result column="photo_img" property="photoImg" />
        <result column="sex" property="sex" />
        <result column="id_card" property="idCard" />
        <result column="id_card_front_img" property="idCardFrontImg" />
        <result column="id_card_back_img" property="idCardBackImg" />
        <result column="type" property="type" />
        <result column="source" property="source" />
        <result column="company_id" property="companyId" />
        <result column="state" property="state" />
        <result column="register_time" property="registerTime" />
        <result column="create_time" property="createTime" />
        <result column="create_user_id" property="createUserId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, name, alias, phone, contact_man, contact_address, customer_nature, company_nature, major_bus_des, initials, photo_img, sex, id_card, id_card_front_img, id_card_back_img, type, source, company_id, state, register_time, create_time, create_user_id
    </sql>

    <!-- 通过手机号，姓名，身份证号查询 -->
    <select id="findCustomer" resultType="com.cjyc.common.model.dto.web.CustomerDto" parameterType="com.cjyc.common.model.vo.web.SelectCustomerVo">
        select  phone as phone,name as name,id_card as idCard,id_card_front_img as idCardFrontImg,
                id_card_back_img as idCardBackImg,register_time as registerTime
        from c_customer
        <where>
            <if test="phone != null and phone != ''">
                   phone = #{phone}
            </if>
            <if test="name != null  and name != ''">
                and   name = #{name}
            </if>
            <if test="idCard != null and idCard != ''">
                and   id_card = #{idCard}
            </if>
                and type = 1
        </where>
    </select>

    <!-- 查询所有大客户用户-->
    <select id="getAllKeyCustomter" resultType="com.cjyc.common.model.dto.web.ListKeyCustomerDto">
        select id as id, name as name,alias as alias,contact_man as contactMan,phone as phone,customer_nature as customerNature,major_bus_des as majorBusDes,create_time as createTime
                from c_customer where type = 2
    </select>

    <!-- 通过客户编号，客户全称，客户简称等条件查询 -->
    <select id="findKeyCustomter" resultType="com.cjyc.common.model.dto.web.ListKeyCustomerDto" parameterType="com.cjyc.common.model.vo.web.SelectKeyCustomerVo">
        select  id as id, name as name,alias as alias,contact_man as contactMan,phone as phone,
                customer_nature as customerNature,major_bus_des as majorBusDes,create_time as createTime,create_user_id as createUserId
        from c_customer
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                and   name = #{name}
            </if>
            <if test="alias != null  and alias != ''">
                and  alias = #{alias}
            </if>
            <if test="contactMan != null  and contactMan != ''">
                and contact_man = #{contactMan}
            </if>
            <if test="phone != null  and phone != ''">
                and  phone = #{phone}
            </if>
            <if test="createUserId != null and createUserId != ''">
                and create_user_id = #{createUserId}
            </if>
                and type = 2
        </where>
    </select>

</mapper>
